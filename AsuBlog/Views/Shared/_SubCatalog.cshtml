@model AsuBlog.Models.WidgetForSubCatalog
@{  bool topicUrlSlugIsNull = Model.TopicUrlSlug is null;
    bool subTopicUrlSlugIsNull = Model.SubTopicUrlSlug is null;
    bool themeUrlSlugIsNull = Model.ThemeUrlSlug is null;
 }
 @if (!topicUrlSlugIsNull && !subTopicUrlSlugIsNull && !themeUrlSlugIsNull)
 {
     foreach (var item in Model.Categories)
     {
         @Html.ActionLink(item.Name, "catalog", "Blog", new {topic = Model.TopicUrlSlug, subtopic = Model.SubTopicUrlSlug, theme = Model.ThemeUrlSlug, subtheme = item.UrlSlug }, new { @class = "subCatalogActionLink" }) 
     }
 }
 else if (!topicUrlSlugIsNull && !subTopicUrlSlugIsNull)
 {
     foreach (var item in Model.Categories)
     {
         @Html.ActionLink(item.Name, "catalog", "Blog", new  { topic = Model.TopicUrlSlug, subtopic = Model.SubTopicUrlSlug, theme = item.UrlSlug}, new { @class = "subCatalogActionLink" }) 
     }
 }
 else if (!topicUrlSlugIsNull)
 {
     foreach (var item in Model.Categories)
     {
         @Html.ActionLink(item.Name, "catalog", "Blog", new { topic = Model.TopicUrlSlug, subtopic = item.UrlSlug }, new { @class = "subCatalogActionLink" }) 
     }
 }
 else
 {
     foreach (var item in Model.Categories)
     {
         @Html.ActionLink(item.Name, "catalog", "Blog", new { topic = item.UrlSlug }, new { @class = "subCatalogActionLink" }) 
     }
 }